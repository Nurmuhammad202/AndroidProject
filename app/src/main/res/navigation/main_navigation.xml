<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_fragment">
    <fragment
        android:id="@+id/home_fragment"
        android:name="uz.personal.androidproject.ui.fragment.main.UserFragmentPage"
        tools:layout="@layout/fragment_user_page">
        <action
            android:id="@+id/action_home_fragment_to_fragment_post"
            app:destination="@id/fragment_post" />
    </fragment>

    <fragment
        android:id="@+id/fragment_post"
        android:name="uz.personal.androidproject.ui.fragment.post.PostFragment"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_fragment_post_to_fragment_info"
            app:destination="@id/fragment_info" />
    </fragment>

    <fragment
        android:id="@+id/fragment_info"
        android:name="uz.personal.androidproject.ui.fragment.user.UserFragment"
        tools:layout="@layout/fragment_user" />
</navigation>